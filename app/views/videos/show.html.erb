<h1>View retention for video <%= @video.id %></h1>

<%= area_chart @data, xtitle: "Video Completion", ytitle: "Users", label: "users", max: @views.count %>

<!-- display "previous" button if not on first video -->
<div class="nav"><%= link_to "previous video", video_path(@video.id - 1) if @video.id > 1 %></div>

<!-- display "next" button if not on last video -->
<div class="nav"><%= link_to "next video", video_path(@video.id + 1) unless @video.id === @last_id %></div>